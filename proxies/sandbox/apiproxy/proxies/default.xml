<ProxyEndpoint name="default">
  <PreFlow/>
  <Flows>
    <Flow name="AddPayloadToPing">
      <Description/>
      <Request/>
      <Response>
        <Step>
          <Name>AssignMessage.AddPayloadToPing</Name>
        </Step>
      </Response>
      <Condition>(proxy.pathsuffix MatchesPath "/_ping") and ((request.verb = "GET") or (request.verb = "HEAD"))</Condition>
    </Flow>
    <Flow name="OptionsPreFlight">
      <Request/>
      <Response>
        <Step>
          <Name>AssignMessage.AddCors</Name>
        </Step>
      </Response>
      <Condition>request.verb == "OPTIONS" AND request.header.origin != null AND request.header.Access-Control-Request-Method != null</Condition>
    </Flow>
    <Flow name="Flow-GenerateAccessToken">
            <Condition>(proxy.pathsuffix MatchesPath "/token") and (request.verb = "GET")</Condition>
            <Request>
                <Step>
                    <Name>DecodeJWT</Name>
                </Step>
                <Step>
                    <Name>LookupCache.JWKS</Name>
                </Step>
                <Step>
                    <!-- This is done to get app custom attributes -->
                    <Name>VerifyAPIKey.FormParam</Name>
                    <Condition>jwks = null</Condition>
                </Step>
                <Step>
                    <Name>ServiceCallout.GetJWKS</Name>
                    <Condition>jwks = null and verifyapikey.VerifyAPIKey.FormParam.jwks-resource-path != null</Condition>
                </Step>
                <Step>
                    <!-- If the JWKS is not cached and a custom attribute
                         with a jwks url value exists perform action abd for steps below -->
                    <Name>PopulateCache.JWKS</Name>
                    <Condition>jwks = null and verifyapikey.VerifyAPIKey.FormParam.jwks-resource-path != null</Condition>
                </Step>
                <Step>
                    <Name>ExtractVariables.ParseJWKS</Name>
                    <Condition>jwks = null and verifyapikey.VerifyAPIKey.FormParam.jwks-resource-path != null</Condition>
                </Step>
                <Step>
                    <Name>VerifyJWT.JWKSUrl</Name>
                    <Condition>verifyapikey.VerifyAPIKey.FormParam.jwks-resource-path != null</Condition>
                </Step>
                <Step>
                    <Name>VerifyJWT.JWKS</Name>
                    <Condition>verifyapikey.VerifyAPIKey.FormParam.jwks-resource-path = null</Condition>
                </Step>
                <Step>
                    <Name>GenerateAccessToken</Name>
                </Step>
            </Request>
            <Response/>
        </Flow>
  </Flows>
  <HTTPProxyConnection>
    <BasePath>{{ SERVICE_BASE_PATH }}</BasePath>
    <VirtualHost>secure</VirtualHost>
  </HTTPProxyConnection>
  <RouteRule name="NoRoute">
    <Condition>request.verb == "OPTIONS" AND request.header.origin != null AND request.header.Access-Control-Request-Method != null</Condition>
  </RouteRule>
  <RouteRule name="NoRoutePing">
    <Condition>(proxy.pathsuffix MatchesPath "/_ping") and ((request.verb = "GET") or (request.verb = "HEAD"))</Condition>
  </RouteRule>
  <RouteRule name="apim">
    <TargetEndpoint>apim</TargetEndpoint>
  </RouteRule>
</ProxyEndpoint>

