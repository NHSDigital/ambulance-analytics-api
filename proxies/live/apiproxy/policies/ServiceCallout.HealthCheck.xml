<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ServiceCallout async="false" continueOnError="false" enabled="true" name="ServiceCallout.HealthCheck">
    <DisplayName>ServiceCallout.HealthCheck</DisplayName>
    <!-- This is the default (55 seconds). Including it to make explicit. -->
    <Timeout>55000</Timeout>
    <Request>
        <Set>
            <Verb>GET</Verb>
        </Set>
        <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
    </Request>
    <Response>calloutResponse</Response>
    <HTTPTargetConnection>
        <SSLInfo>
            <Enabled>true</Enabled>
        </SSLInfo>
        <URL>https://int.api.service.nhs.uk/dps-submission-api/{request.header.x-dataset-id}</URL>
    </HTTPTargetConnection>
</ServiceCallout>