<ProxyEndpoint name="default">
    <PreFlow/>
  <Flows>
    <Flow name="AddPayloadToPing">
      <Description/>
      <Request/>
      <Response>
        <Step>
          <Name>AssignMessage.AddPayloadToPing</Name>
        </Step>
      </Response>
      <Condition>(proxy.pathsuffix MatchesPath "/_ping") and ((request.verb = "GET") or (request.verb = "HEAD"))</Condition>
    </Flow>
    <Flow name="OptionsPreFlight">
      <Request/>
      <Response>
        <Step>
          <Name>AssignMessage.AddCors</Name>
        </Step>
      </Response>
      <Condition>request.verb == "OPTIONS" AND request.header.origin != null AND request.header.Access-Control-Request-Method != null</Condition>
    </Flow>
    <Flow name="Flow-GenerateAccessToken">
            <Condition>(proxy.pathsuffix MatchesPath "/token") and (request.verb = "GET")</Condition>
            <Request>
                <Step>
                    <Name>DecodeJWT</Name>
                </Step>
                <Step>
                    <Name>LookupCacheJWKS</Name>
                </Step>
                <Step>
                    <Name>ExecuteJWKSRequest</Name>
                    <Condition>jwks = null</Condition>
                </Step>
                <Step>
                    <Name>PopulateCacheJWKS</Name>
                    <Condition>jwks = null</Condition>
                </Step>
                <Step>
                    <Name>ParseJWKSResponse</Name>
                    <Condition>jwks = null</Condition>
                </Step>
                <Step>
                    <Name>VerifyJWT</Name>
                </Step>
                <Step>
                    <Name>GenerateAccessToken</Name>
                </Step>
            </Request>
            <Response/>
        </Flow>
  </Flows>
  <HTTPProxyConnection>
    <BasePath>{{ SERVICE_BASE_PATH }}</BasePath>
    <VirtualHost>secure</VirtualHost>
  </HTTPProxyConnection>
  <RouteRule name="NoRoute">
    <Condition>request.verb == "OPTIONS" AND request.header.origin != null AND request.header.Access-Control-Request-Method != null</Condition>
  </RouteRule>
  <RouteRule name="NoRoutePing">
    <Condition>(proxy.pathsuffix MatchesPath "/_ping") and ((request.verb = "GET") or (request.verb = "HEAD"))</Condition>
  </RouteRule>
  <RouteRule name="dps">
    <TargetEndpoint>dps</TargetEndpoint>
  </RouteRule>
</ProxyEndpoint>
